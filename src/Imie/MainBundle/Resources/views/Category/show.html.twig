{% extends "ImieMainBundle::layout.html.twig" %}

{% block body %}
    <h1>Category</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a class="btn btn-default" href="{{ path('category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a class="btn btn-warning" href="{{ path('category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form_widget(delete_form.submit, { 'attr': {'class': 'btn btn-danger'}}) }}</li>
</ul>
{% endblock %}
